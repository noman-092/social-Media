<%- include('partials/header') %>
<div class="w-[80%] mx-auto p-10">
  <form
    class="text-2xl px-24 m-auto w-1/2 border-2"
    action="/posts/create"
    method="post"
    enctype="multipart/form-data"
  >
    <h1 class="mb-10 text-5xl font-bold">Create post</h1>
    <input
      class="w-full mb-5 border p-3 rounded"
      type="text"
      placeholder="Post title"
      name="title"
    />
    <input class="w-full mb-5 border p-3 rounded" type="file" name="media" />
    <button
      class="mb-5 hover:bg-blue-400 w-1/2 bg-blue-300 px-5 py-2 text-white rounded"
    >
      post
    </button>
  </form>
</div>

<%- include('partials/footer') %>
